         ($selected {$op focus_outfit})
         {outfit.lbl set
            text_token
            {if_else
               {{$op tour_char} has_group_selection
                  {$op focus_category}
                  {$op focus_outfit}
               }
               {$op focus_outfit}
               {{$op focus_provider} token $selected}
            }
         }
         {outfit_cost.lbl set_showing TRUE}
         {outfit_cost.lbl set_localized
            {fmt_money {{$op focus_provider} cost $selected}}
         }
      }
   )
   (SELECT_MSG
