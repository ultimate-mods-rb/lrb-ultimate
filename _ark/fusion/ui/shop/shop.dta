{func hide_invalid_genres
   ($panel $category $is_closet $is_likeness)
   {unless {exists 10unused.btn}
      {new BandButton 10unused.btn}
      {10unused.btn copy 09faces.btn 0}
      {09faces.btn set_local_pos 86.92 0.00 65.06}
      {09faces.btn set nav_down 10unused.btn}
      {10unused.btn set_local_pos 86.92 0.00 48.06}
      {10unused.btn set nav_down 08rock.btn}
      {10unused.btn set text_token lrb_shop_unused}
      {08rock.btn set_local_pos 86.92 0.00 31.06}
      {Categories.grp add_object 10unused.btn}
      {$this sync_objects}
   }
   {if {exists 09faces.btn}
      {09faces.btn set text_token lrb_shop_custom}
   }
   {do
      ($index 0)
      {foreach $button OUTFIT_GENRES_BUTTONS
         {if {exists $button}
            {do
               ($genre {elem OUTFIT_GENRES $index})
               {if_else
                  {==
                     {$panel is_genre_valid $category $genre $is_closet $is_likeness}
                     FALSE
                  }
                  {$this disable $button}
                  {do
                     {$this enable $button}
                  }
               }
            }
         }
         {'++' $index}
      }
   }
}
