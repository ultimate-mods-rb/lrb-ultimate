#define COSTUMES_HANDLERS (
   (outfit_char shop_char_panel)
   (outfit_money shop_money_panel)
   (show_outfit_text TRUE)
   (single_screen TRUE)
   OUTFIT_DEFAULTS
   (enter
      OUTFIT_DEFAULT_ENTER
      {$this set button_list OUTFIT_GENRES_BUTTONS}
      {$this set current_grp Costume.grp}
      {$this set current_list costumes.lst}
      {if_else [closet]
         {do
            {hide_invalid_genres $this costumes [closet] [is_likeness]}
            {Categories.grp set_showing TRUE}
            {Costume.grp set_showing FALSE}
            {toggle_buttons [button_list] TRUE}
         }
         {$this show_genre none}
      }
   )
   (setup {$this store_outfit})
   (show_genre
      ($genre)
      {do
         {toggle_buttons [button_list] FALSE}
         {[current_grp] set_showing TRUE}
         {$this set genre $genre}
         {$this set_focus [current_list]}
         {$this refresh_lists}
         {$this store_outfit}
      }
   )
   (BUTTON_DOWN_MSG
      {switch $action
         (kAction_Confirm
            {switch {$this focus_name}
               (OUTFIT_GENRES_BUTTONS
                  {foreach_int $index 0 {size OUTFIT_GENRES_BUTTONS}
                     {do
                        ($button {elem OUTFIT_GENRES_BUTTONS $index})
                        {if {== {$this focus_name} $button}
                           {$this set current_btn $button}
                           {$this show_genre {elem OUTFIT_GENRES $index}}
                        }
                     }
                  }
               )
               (costumes.lst {$this select_item})
            }
            kDataUnhandled
         )
         (kAction_Cancel
            {if_else [closet]
               {do
                  {switch {$this focus_name}
                     (OUTFIT_GENRES_BUTTONS
                        ;{if_else {== [closet] TRUE}
                        ;   {ui goto_screen shop_mycloset}
                           {ui goto_screen shop_screen}
                        ;}
                     )
                     (costumes.lst
                        {$this undo_outfit}
                        {toggle_buttons [button_list] TRUE}
                        {$this set_focus [current_btn]}
                        {[current_grp] set_showing FALSE}
                        {new.grp set_showing FALSE}
                        {$this update}
                     )
                  }
               }
               {do
                  {$this undo_outfit}
                  {new.grp set_showing FALSE}
                  {ui goto_screen shop_screen}
               }
            }
            {[outfit_char] select_cam "idle"}
            {synth play button_back}
            kDataUnhandled
         )
         (kAction_Start
            {if {&& {== {$this focus_name} costumes.lst} [can_change_member]}
               {$this set apply_to_all TRUE}
               {$this set current_list costumes.lst}
               {$this select_item}
            }
         )
         CHANGE_MEMBER_ACTION
      }
   )
)
{new OutfitPanel
   shop_costumes_panel
   (file "shop_costumes.milo")
   (closet TRUE)
   (is_likeness FALSE)
   (focus 02city.btn)
   COSTUMES_HANDLERS
}
{new OutfitPanel
