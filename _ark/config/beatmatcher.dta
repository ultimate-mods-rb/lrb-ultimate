   #include ../ulti/midi_parsers.dta
)
(callbacks
   (sixteenth_note
      {do
         ($lbl {{{get_track_panel} find scoreboard} find timer.lbl})
         {$lbl set_localized
            {switch $songtimer
               (1
                  {sprint
                     {seconds_to_time {/ {beatmatch get_song_ms} 1000}}
                     "/"
                     {seconds_to_time {end_of_song get end_ms}}
                  }
               )
               (2
                  {sprint
                     {seconds_to_time {max {- {end_of_song get end_ms} {/ {beatmatch get_song_ms} 1000}} 0}}
                     "/"
                     {seconds_to_time {end_of_song get end_ms}}
                  }
               )
               (3 {seconds_to_time {max {- {end_of_song get end_ms} {/ {beatmatch get_song_ms} 1000}} 0}})
               (4 {seconds_to_time {/ {beatmatch get_song_ms} 1000}})
               (5 {seconds_to_time {end_of_song get end_ms}})
               ""
            }
         }
      }
      {if_else $world
         {handle_type ($world quarterbeat)}
         {handle (game quarterbeat)}
      }
   )
   (eighth_note {handle_type ($world halfbeat)})
   (beat
      ; doing this on downbeat causes it to countdown at half speed on songs like vasoline and tomsawyer
      {if {== {mod {int {taskmgr beat}} 4} 0}
         {foreach $inst (guitar drum vocals bass)
            {with coop_track_panel
               {if {exists {sprint $inst "_countdown"}}
                  {{sprint $inst "_countdown"} downbeat}
               }
            }
         }
      }
      {if_else $world
         {handle_type ($world beat)}
         {handle (game beat)}
      }
   )
   (downbeat
      {if_else $world
         {handle_type ($world downbeat)}
         {handle (game downbeat)}
      }
   )
   (reset {handle ($world start)})
)
(watcher
   (can_switch_tracks FALSE)
   (slop
      {if_else {gamemode get is_practice}
         100
         {* 100 $speedmod}
      }
   )
   (cheat_error 0)
   (autoplay_accuracy (100 100 100 100))
   #ifdef HX_PS3
   ; yeah so whammying sometimes mutes the guitar/bass audio until you whammy again in rb2 venues on ps3 only
   ; i have no clue what could be causing this other than some silly fuckup by harmonix
   ; thankfully just setting the range to 0 "fixes" it :3
   (pitch_bend_range
      {if_else {has_substr {game get_venue} "rb2/"}
         0
         $whammypb
      }
   )
   #else
   (pitch_bend_range $whammypb)
   #endif
   (ms_to_full_pitch_bend 1000)
)
